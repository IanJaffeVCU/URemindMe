<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.note.NoteFormFragment">

    <TextView
        android:id="@+id/text_calendar2"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:text="Subject"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editSubject"
        android:layout_width="387dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Enter Subject"
        android:inputType="text|textCapSentences"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/text_calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_calendar2"
        app:layout_constraintVertical_bias="1.0"
        android:onClick="store_subject"/>

    <TextView
        android:id="@+id/text_calendar"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"

        android:text="Notes"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editNotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editNotes"
        android:layout_width="381dp"
        android:layout_height="304dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Enter Notes"
        android:inputType="text|textMultiLine|textCapSentences"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/SaveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="store_notes"/>

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>